{
  "compilerOptions": {
    "target": "ESNext",
    "sourceMap": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
